import java.awt.Color;
import java.awt.Graphics;
import java.awt.Image;
import java.io.File;
import java.util.ArrayList;

import javax.imageio.ImageIO;

public class Ship extends MovingThing
{
	private int speed;
	private Image image;
	private int attackSpeed;

	public Ship()
	{
		this(500,400,5);
	}

	public Ship(int x, int y)
	{
		this(x,y,0);
	}

	public Ship(int x, int y, int s)
	{
		super(x, y);
		speed=s;
		try
		{
			image = ImageIO.read(new File("C:\\Users\\zengt9949\\Desktop\\APCSA-Tygan\\Unit17\\src\\ship.jpg"));
		}
		catch(Exception e)
		{
			System.out.println("wrong pathing");
		}
		attackSpeed = 100;
	}


	public void setSpeed(int s)
	{
	   speed = s;
	}

	public int getSpeed()
	{
	   return speed;
	}
	public void setAttackSpeed(int s)
	{
		speed = s;
	}
	
	public int getAttackSpeed(){
		return attackSpeed;
	}
	
	
	public Image getImage(){
		return image;
	}

	public void draw( Graphics window )
	{
		window.drawImage(image,getX(),getY(),80,80,null);
	}

	public String toString()
	{
		return super.toString() + " " + getSpeed();
	}
	
	public void checkPowerUpCollision(ArrayList<Powerup> powerups) {
		for(Powerup p : powerups){
			if(Math.abs(getX() + 30 - (p.getX())) < 50 && Math.abs(getY() + 20 - (p.getY())) < 50){	
				powerups.remove(p);

			}
		}
	}
	
}
