

import java.awt.Graphics;
import java.util.ArrayList;
import java.util.ConcurrentModificationException;
import java.util.List;

public class Aliens {

	private List<Alien> aliensList;
	
	public Aliens(){
		aliensList = new ArrayList<Alien>();
	}
	
	public void add(Alien x){
		aliensList.add(x);
	}
	
	public void draw(Graphics window){
	
		for(Alien x : aliensList){
			x.draw(window);
		}
	}
	public void move(){
		 for(Alien x : aliensList){
			 double rand = Math.random() * 4;
			 if(rand < 1){
				 x.move("RIGHT");
			 }
			 else if(rand < 2){
				 x.move("UP");
			 }
			 else if(rand < 3){
				 x.move("LEFT");
			 }
			 else {
				 x.move("DOWN");
			 }
		 }
	}
	
	public void checkCollision(ArrayList<Ammo> shots) {
		for(Ammo x : shots){
			for(Alien y : aliensList){
				try{
					if(Math.abs(x.getX() - (y.getX() + 25)) < 50 && Math.abs(x.getY() - (y.getY() + 25)) < 50){	
						aliensList.remove(y);
						shots.remove(x);
					}
				}
				catch(Exception e){
					
				}
			}
		}
	}
	
}
