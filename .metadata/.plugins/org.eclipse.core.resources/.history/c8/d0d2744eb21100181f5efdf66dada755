import java.lang.System;
import java.lang.Math;
import java.util.Scanner;

public class Grades
{
	//instance variables
	int numGrades;
	Scanner keyboard = new Scanner(System.in);
	double[] gradesList;

	//constructor
	public Grades(){
		System.out.print("How many grades?");
		numGrades = keyboard.nextInt();
		gradesList = new double[numGrades];
		for (int i = 0; i < numGrades; i++){
			System.out.println("Enter grade " + i + ": ");
			gradesList[i] = keyboard.nextDouble();	
		}
	}

	//set method
	public void setGrades(){
		
	}


	private double getSum()
	{
		double sum=0.0;
		for (int i = 0; i < gradesList.length; i++){
			sum = sum + gradesList[i];
		}
		return sum;
	}

	public double getAverage()
	{
		double average=0.0;
		average = getSum() / gradesList.length;
		return Math.round(average * 100) / 100;
	}


	//toString method
	public String toString(){
		String output = "average = " + getAverage();
		return output;
	}


}